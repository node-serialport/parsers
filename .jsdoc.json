{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": ["packages", "README.md"],
    "excludePattern": "node_modules",
    "includePattern": ".+\\.(js)?$"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "markdown": {
		"parser": "gfm",
		"hardwrap": true,
		"excludeTags": []
	},
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "template": "node_modules/docdash",
    "encoding": "utf8",
    "private": true,
    "destination": "./docs/",
    "recurse": true,
    "_tutorials": "./examples"
  },
  "docdash": {
    "static": true,
    "sort": true
  }
}
